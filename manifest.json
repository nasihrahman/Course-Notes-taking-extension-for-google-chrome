{
  "manifest_version": 3,
  "name": "Lecture Companion",
  "version": "1.0",
  "description": "Take screenshots, record important sessions, and organize captures by course/section.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.coursera.org/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html"
}