{
  "manifest_version": 3,
  "name": "Screenshot Taker",
  "version": "1.0",
  "description": "Takes screenshots of the current tab on selected educational websites.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.udemy.com/*",
    "*://*.coursera.org/*",
    "*://*.khanacademy.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}